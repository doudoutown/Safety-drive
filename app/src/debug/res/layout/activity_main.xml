    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp">

        <Button
            android:text="start"
            android:id="@+id/startBtn"
            android:layout_width="100dp"
            android:layout_height="50dp" />
        <Button
            android:text="stop"
            android:id="@+id/stopBtn"
            android:layout_width="100dp"
            android:layout_toRightOf="@+id/startBtn"
            android:layout_height="50dp"/>
        <Button
            android:text="clear"
            android:id="@+id/clearBtn"
            android:layout_width="100dp"
            android:layout_toRightOf="@+id/stopBtn"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/textViewX"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/startBtn"
            android:gravity="center_vertical"
            android:text="X:"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/textViewY"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/textViewX"
            android:text="Y:"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/textViewZ"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/textViewY"
            android:text="Z:"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/textViewZ"
            android:text="message:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewLevel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/textViewMessage"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewMsg"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/textViewLevel"
            android:textSize="16sp" />
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_below="@+id/textViewMsg"
            android:layout_height="match_parent" />

    </RelativeLayout>

</RelativeLayout>
